{
  VAdminProto.VoldemortAdminRequest request=createAddStoreRequest(def);
  Node node=currentCluster.getNodeById(nodeId);
  if (null == node)   throw new VoldemortException("Invalid node id (" + nodeId + ") specified");
  logger.info("Adding on node " + node.getHost() + ":"+ node.getId());
  VAdminProto.AddStoreResponse.Builder response=sendAndReceive(nodeId,request,VAdminProto.AddStoreResponse.newBuilder());
  if (response.hasError())   throwException(response.getError());
  logger.info("Succesfully added on node " + node.getHost() + ": "+ node.getId());
}
