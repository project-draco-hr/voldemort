{
  StoreUtils.assertValidKey(key);
  DataInputStream input=null;
  try {
    HttpPost method=new HttpPost(this.storeUrl);
    ByteArrayOutputStream outputBytes=new ByteArrayOutputStream();
    requestFormat.writeGetVersionRequest(new DataOutputStream(outputBytes),storeName,key,reroute);
    input=executeRequest(method,outputBytes);
    return requestFormat.readGetVersionResponse(input);
  }
 catch (  IOException e) {
    throw new UnreachableStoreException("Could not connect to " + storeUrl + " for "+ storeName,e);
  }
 finally {
    IOUtils.closeQuietly(input);
  }
}
