{
  try {
    method.setRequestEntity(new ByteArrayRequestEntity(output.toByteArray()));
    int response=httpClient.executeMethod(method);
    if (response != HttpURLConnection.HTTP_OK)     throw new UnreachableStoreException("HTTP request to store " + storeName + " returned status code "+ response+ " "+ method.getStatusText());
    return new DataInputStream(method.getResponseBodyAsStream());
  }
 catch (  HttpException e) {
    throw new VoldemortException(e);
  }
catch (  IOException e) {
    throw new UnreachableStoreException("Could not connect to " + storeUrl + " for "+ storeName,e);
  }
}
