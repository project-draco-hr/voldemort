{
  fixCount++;
  if (fixCount % progressBar == 0) {
    long nowTimeMs=System.currentTimeMillis();
    StringBuilder sb=new StringBuilder();
    sb.append("\nConsistencyFix Progress Bar\n");
    sb.append("\tBad keys processed : " + fixCount + " (during this progress bar period)\n");
    sb.append("\tBad key processing rate : " + getPrettyQPS(progressBar,nowTimeMs - lastTimeMs) + " bad keys/second)\n");
    sb.append("\tServer-puts issued : " + putCount + " (since fixer started)\n");
    logger.info(sb.toString());
    lastTimeMs=nowTimeMs;
  }
}
