{
  try {
    startClusterAsync(hostNames,sshPrivateKey,hostUserId,voldemortRootDirectory,voldemortHomeDirectory,nodeIds);
    String badHostName=hostNames.get(0);
    stopClusterNode(badHostName,sshPrivateKey,hostUserId,voldemortRootDirectory);
    startClusterNode(badHostName,sshPrivateKey,hostUserId,voldemortRootDirectory,voldemortHomeDirectory,nodeIds.get(hostNames.get(0)));
  }
  finally {
    stopCluster(hostNames,sshPrivateKey,hostUserId,voldemortRootDirectory);
  }
}
