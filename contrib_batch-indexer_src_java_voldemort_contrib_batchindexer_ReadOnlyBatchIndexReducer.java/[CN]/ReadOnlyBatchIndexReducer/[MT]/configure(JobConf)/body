{
  try {
    position=0;
    conf=job;
    taskId=job.get("mapred.task.id");
    taskIndexFileName=new Path(FileOutputFormat.getOutputPath(conf),conf.get("voldemort.index.filename") + "_" + taskId);
    taskValueFileName=new Path(FileOutputFormat.getOutputPath(conf),conf.get("voldemort.data.filename") + "_" + taskId);
    FileSystem fs=taskIndexFileName.getFileSystem(job);
    indexFileStream=fs.create(taskIndexFileName,(short)1);
    valueFileStream=fs.create(taskValueFileName,(short)1);
  }
 catch (  IOException e) {
    throw new RuntimeException("Failed to open Input/OutputStream",e);
  }
}
