{
  _indexFileStream.close();
  _valueFileStream.close();
  Path hdfsIndexFile=new Path(FileOutputFormat.getOutputPath(_conf),indexFileName + "_" + _nodeId);
  Path hdfsValueFile=new Path(FileOutputFormat.getOutputPath(_conf),dataFileName + "_" + _nodeId);
  hdfsIndexFile.getFileSystem(_conf).copyFromLocalFile(new Path(taskIndexFileName),hdfsIndexFile);
  hdfsValueFile.getFileSystem(_conf).copyFromLocalFile(new Path(taskValueFileName),hdfsValueFile);
}
