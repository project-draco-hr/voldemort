{
  AdminClientConfig config=new AdminClientConfig().setMaxConnectionsPerNode(2).setMaxThreads(2).setAdminConnectionTimeoutSec(voldemortConfig.getAdminConnectionTimeout()).setAdminSocketTimeoutSec(voldemortConfig.getAdminSocketTimeout()).setAdminSocketBufferSize(voldemortConfig.getAdminSocketBufferSize());
  return new AdminClient(cluster,config);
}
