{
  AdminClientConfig config=(AdminClientConfig)new AdminClientConfig().setMaxConnectionsPerNode(1).setMaxThreads(1).setConnectionTimeout(voldemortConfig.getAdminConnectionTimeout(),TimeUnit.SECONDS).setSocketTimeout(voldemortConfig.getAdminSocketTimeout(),TimeUnit.SECONDS).setSocketBufferSize(voldemortConfig.getAdminSocketBufferSize());
  return new AdminClient(cluster,config);
}
