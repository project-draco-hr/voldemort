{
  AdminClientConfig config=(AdminClientConfig)new AdminClientConfig().setMaxConnectionsPerNode(1).setMaxThreads(1).setConnectionTimeout(voldemortConfig.getAdminConnectionTimeout(),TimeUnit.MILLISECONDS).setSocketTimeout(voldemortConfig.getSocketTimeoutMs(),TimeUnit.MILLISECONDS).setSocketBufferSize(voldemortConfig.getAdminSocketBufferSize());
  return new AdminClient(cluster,config);
}
