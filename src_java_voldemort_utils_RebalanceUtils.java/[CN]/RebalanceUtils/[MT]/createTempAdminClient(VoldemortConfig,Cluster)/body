{
  AdminClientConfig config=new AdminClientConfig().setMaxConnectionsPerNode(1).setMaxThreads(1).setAdminConnectionTimeoutSec(voldemortConfig.getAdminConnectionTimeout()).setAdminSocketTimeoutSec(voldemortConfig.getAdminSocketTimeout()).setAdminSocketBufferSize(voldemortConfig.getAdminSocketBufferSize());
  return new AdminClient(cluster,config);
}
