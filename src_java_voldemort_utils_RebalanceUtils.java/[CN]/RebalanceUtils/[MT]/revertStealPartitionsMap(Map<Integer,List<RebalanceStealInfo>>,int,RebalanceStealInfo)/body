{
synchronized (rebalanceStealInfo) {
    List<RebalanceStealInfo> stealList=(stealPartitionsMap.containsKey(stealerNodeId)) ? stealPartitionsMap.get(stealerNodeId) : new ArrayList<RebalanceStealInfo>();
    stealList.add(rebalanceStealInfo);
    stealPartitionsMap.put(stealerNodeId,stealList);
  }
}
