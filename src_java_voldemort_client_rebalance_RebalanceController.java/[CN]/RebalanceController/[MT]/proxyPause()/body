{
  logger.info("Pausing after cluster state has changed to allow proxy bridges to be established. " + "Will start rebalancing work on servers in " + proxyPauseS + " seconds.");
  try {
    Thread.sleep(TimeUnit.SECONDS.toMillis(proxyPauseS));
  }
 catch (  InterruptedException e) {
    logger.warn("Sleep interrupted in proxy pause.");
  }
}
