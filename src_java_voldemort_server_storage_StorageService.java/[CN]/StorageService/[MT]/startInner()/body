{
  MetadataStore metadataStore=MetadataStore.readFromDirectory(new File(voldemortConfig.getMetadataDirectory()));
  registerEngine(metadataStore);
  for (  String configClassName : voldemortConfig.getStorageConfigurations())   initStorageConfig(configClassName);
  storageConfigs.put(ViewStorageConfiguration.TYPE,new ViewStorageConfiguration(voldemortConfig,new ArrayList<StoreDefinition>(metadata.getStoreDefs().values()),storeRepository));
  if (voldemortConfig.isSlopEnabled()) {
    StorageEngine<ByteArray,byte[]> slopEngine=getStorageEngine("slop",voldemortConfig.getSlopStoreType());
    registerEngine(slopEngine);
    storeRepository.setSlopStore(SerializingStorageEngine.wrap(slopEngine,new ByteArraySerializer(),new SlopSerializer()));
  }
  List<StoreDefinition> storeDefs=new ArrayList<StoreDefinition>(this.metadata.getStoreDefs().values());
  logger.info("Initializing stores:");
  for (  StoreDefinition def : storeDefs)   if (!def.isView())   openStore(def);
  for (  StoreDefinition def : storeDefs)   if (def.isView())   openStore(def);
  logger.info("All stores initialized.");
}
