{
  StringBuffer sb=new StringBuffer();
  sb.append("\nRebalancePartitionsInfo(" + getStealerId() + " ["+ initialCluster.getNodeById(getStealerId()).getHost()+ "] <--- "+ getDonorId()+ " ["+ initialCluster.getNodeById(getDonorId()).getHost()+ "] ");
  for (  String unbalancedStore : storeToReplicaToAddPartitionList.keySet()) {
    sb.append("\n\t- Store '" + unbalancedStore + "' move ");
    HashMap<Integer,List<Integer>> replicaToAddPartition=storeToReplicaToAddPartitionList.get(unbalancedStore);
    for (int replicaNum=0; replicaNum <= maxReplica; replicaNum++) {
      if (replicaToAddPartition != null && replicaToAddPartition.containsKey(replicaNum))       sb.append(" - " + replicaToAddPartition.get(replicaNum));
 else       sb.append(" - []");
    }
  }
  sb.append(")");
  return sb.toString();
}
