{
  StringBuffer sb=new StringBuffer();
  sb.append("RebalancePartitionsInfo(" + getStealerId() + " <--- "+ getDonorId()+ ", partitions moved ");
  for (int replicaNum=0; replicaNum <= maxReplica; replicaNum++) {
    if (replicaToPartitionList.containsKey(replicaNum))     sb.append(" - " + replicaToPartitionList.get(replicaNum));
 else     sb.append(" - []");
  }
  sb.append(", partitions deleted ");
  for (int replicaNum=0; replicaNum <= maxReplica; replicaNum++) {
    if (replicaToDeletePartitionList.containsKey(replicaNum))     sb.append(" - " + replicaToDeletePartitionList.get(replicaNum));
 else     sb.append(" - []");
  }
  sb.append(", stores: " + getUnbalancedStoreList() + ")");
  return sb.toString();
}
