{
  ((MutableStoreResolver)failureDetector.getConfig().getStoreResolver()).setReturnNullStore(node,false);
  failureDetector.recordSuccess(node);
  if (shouldWait) {
    Time time=failureDetector.getConfig().getTime();
    while (!failureDetector.isAvailable(node)) {
      time.sleep(1000);
      System.out.println("Slept until " + time.getCurrentDate());
    }
  }
}
