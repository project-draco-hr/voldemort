{
  cluster=ServerTestUtils.getLocalCluster(2,new int[][]{{0,2,4,6},{1,3,5,7}});
  servers=new ArrayList<VoldemortServer>();
  servers.add(ServerTestUtils.startVoldemortServer(ServerTestUtils.createServerConfig(useNio,0,TestUtils.createTempDir().getAbsolutePath(),null,STORES_XML,new Properties()),cluster));
  servers.add(ServerTestUtils.startVoldemortServer(ServerTestUtils.createServerConfig(useNio,1,TestUtils.createTempDir().getAbsolutePath(),null,STORES_XML,new Properties()),cluster));
  Node node=cluster.getNodeById(0);
  String bootstrapUrl="tcp://" + node.getHost() + ":"+ node.getAdminPort();
  StoreClientFactory storeClientFactory=new SocketStoreClientFactory(new ClientConfig().setBootstrapUrls(bootstrapUrl));
  storeClient=storeClientFactory.getStoreClient(STORE_NAME);
}
