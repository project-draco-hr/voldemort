{
  if (o1 == o2)   return 0;
 else   if (o1 == null)   return -1;
 else   if (o2 == null)   return 1;
 else   if (o1.getClass() != o2.getClass())   throw new IllegalArgumentException("Attempt to compare two items of different classes: " + o1.getClass() + " and "+ o2.getClass());
 else   if (o1 instanceof Comparable)   return ((Comparable)o1).compareTo(o2);
  throw new IllegalArgumentException("Incomparable object type!");
}
