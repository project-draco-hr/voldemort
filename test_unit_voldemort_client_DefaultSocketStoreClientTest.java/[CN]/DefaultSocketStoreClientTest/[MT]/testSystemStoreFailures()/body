{
  success=true;
  for (int j=0; j < 100; j++) {
    (new ParallelClient(client)).start();
  }
  servers[1].stop();
  try {
    Thread.sleep(10000);
  }
 catch (  Exception e) {
  }
  assertEquals(success,true);
  try {
    servers[1].start();
  }
 catch (  Exception e) {
    e.printStackTrace();
    fail("Cannot restart Voldemort Server");
  }
}
