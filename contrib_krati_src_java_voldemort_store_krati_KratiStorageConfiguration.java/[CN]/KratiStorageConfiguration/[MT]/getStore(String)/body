{
synchronized (lock) {
    File storeDir=new File(dataDirectory,storeName);
    if (!storeDir.exists()) {
      logger.info("Creating Krati data directory '" + storeDir.getAbsolutePath() + ".");
      storeDir.mkdirs();
    }
    return new KratiStorageEngine(storeName,segmentFileSizeMB,hashLoadFactor,initLevel,storeDir);
  }
}
