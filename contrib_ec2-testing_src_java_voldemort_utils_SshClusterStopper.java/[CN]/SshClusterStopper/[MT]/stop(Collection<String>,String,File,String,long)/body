{
  StringBuilder errors=new StringBuilder();
  try {
    run("SshClusterStopper.ssh",hostNames,hostUserId,sshPrivateKey,voldemortRootDirectory,null,null,timeout,errors);
  }
 catch (  IOException e) {
    throw new StopClusterException(e);
  }
  if (errors.length() > 0)   throw new StopClusterException(errors.toString());
}
