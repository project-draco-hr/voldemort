{
  Cluster updatedCluster=ServerTestUtils.getLocalCluster(4);
  AdminClient client=getAdminClient();
  for (int i=0; i < NUM_RUNS; i++) {
    VectorClock clock=((VectorClock)client.getRemoteCluster(0).getVersion()).incremented(0,System.currentTimeMillis());
    client.updateRemoteCluster(0,updatedCluster,clock);
    assertEquals("Cluster should match",updatedCluster,getVoldemortServer(0).getMetadataStore().getCluster());
    assertEquals("AdminClient.getMetdata() should match",client.getRemoteCluster(0).getValue(),updatedCluster);
    assertEquals("versions should match as well.",clock,client.getRemoteCluster(0).getVersion());
  }
}
