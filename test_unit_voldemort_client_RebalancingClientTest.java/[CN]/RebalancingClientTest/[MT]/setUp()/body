{
  int[] ports=ServerTestUtils.findFreePorts(2);
  Node node0=new Node(0,"localhost",ports[0],ports[1],Arrays.asList(new Integer[]{0,1}));
  ports=ServerTestUtils.findFreePorts(3);
  Node node1=new Node(1,"localhost",ports[0],ports[1],Arrays.asList(new Integer[]{2,3}));
  Cluster cluster=new Cluster("rebalancing-client-test",Arrays.asList(new Node[]{node0,node1}));
  server0=new VoldemortServer(ServerTestUtils.createServerConfig(0,TestUtils.createTempDir().getAbsolutePath(),null,storesXmlfile),cluster);
  server0.start();
  server1=new VoldemortServer(ServerTestUtils.createServerConfig(1,TestUtils.createTempDir().getAbsolutePath(),null,storesXmlfile),cluster);
  server1.start();
}
