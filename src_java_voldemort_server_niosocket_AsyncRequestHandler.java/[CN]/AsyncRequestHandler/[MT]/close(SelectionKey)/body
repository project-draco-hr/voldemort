{
  if (logger.isInfoEnabled())   logger.info("Closing remote connection from " + socketChannel.socket().getPort());
  try {
    socketChannel.socket().close();
  }
 catch (  IOException ex) {
    if (logger.isEnabledFor(Level.WARN))     logger.warn(ex,ex);
  }
  try {
    socketChannel.close();
  }
 catch (  IOException ex) {
    if (logger.isEnabledFor(Level.WARN))     logger.warn(ex,ex);
  }
  selectionKey.cancel();
}
