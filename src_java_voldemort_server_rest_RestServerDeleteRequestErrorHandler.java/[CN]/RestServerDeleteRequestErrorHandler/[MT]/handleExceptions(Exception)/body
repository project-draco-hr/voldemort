{
  if (exception instanceof InvalidMetadataException) {
    writeErrorResponse(this.messageEvent,HttpResponseStatus.REQUESTED_RANGE_NOT_SATISFIABLE,"The requested key does not exist in this partition");
  }
 else   if (exception instanceof PersistenceFailureException) {
    writeErrorResponse(this.messageEvent,HttpResponseStatus.INTERNAL_SERVER_ERROR,"TOperation failed");
  }
 else   if (exception instanceof UnsupportedOperationException) {
    writeErrorResponse(this.messageEvent,HttpResponseStatus.METHOD_NOT_ALLOWED,"operation not supported in read-only store");
  }
 else {
    super.handleExceptions(exception);
  }
}
