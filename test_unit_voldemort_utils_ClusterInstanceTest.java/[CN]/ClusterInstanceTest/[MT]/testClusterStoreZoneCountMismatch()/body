{
  ClusterInstance ci;
  boolean veCaught;
  veCaught=false;
  try {
    ci=new ClusterInstance(getZZCluster(),getZZZStoreDefsInMemory());
    ci.getPartitionBalance();
  }
 catch (  VoldemortException ve) {
    veCaught=true;
  }
  assertTrue(veCaught);
  veCaught=false;
  try {
    ci=new ClusterInstance(getZZZCluster(),getZZStoreDefsInMemory());
    ci.getPartitionBalance();
  }
 catch (  VoldemortException ve) {
    veCaught=true;
  }
  assertTrue(veCaught);
}
