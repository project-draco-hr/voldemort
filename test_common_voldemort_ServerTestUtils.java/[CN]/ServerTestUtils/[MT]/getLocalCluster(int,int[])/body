{
  if (2 * numberOfNodes != ports.length)   throw new IllegalArgumentException(2 * numberOfNodes + " ports required but only " + ports.length + " given.");
  List<Node> nodes=new ArrayList<Node>();
  for (int i=0; i < numberOfNodes; i++)   nodes.add(new Node(i,"localhost",ports[2 * i],ports[2 * i + 1],ImmutableList.of(i)));
  return new Cluster("test-cluster",nodes);
}
