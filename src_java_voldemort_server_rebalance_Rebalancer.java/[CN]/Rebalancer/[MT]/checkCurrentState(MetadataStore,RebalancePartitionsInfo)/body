{
  if (metadataStore.getServerState().equals(VoldemortState.REBALANCING_MASTER_SERVER) && !Iterables.any(metadataStore.getRebalancingStealInfo(),new DonorIdPredicate(stealInfo.getDonorId())))   throw new VoldemortException("Server " + metadataStore.getNodeId() + " is already rebalancing from:"+ Joiner.on(",").join(metadataStore.getRebalancingStealInfo())+ " rejecting rebalance request:"+ stealInfo);
}
