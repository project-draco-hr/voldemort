{
  stealInfo.setAttempt(stealInfo.getAttempt() + 1);
  AdminClient adminClient=RebalanceUtils.createTempAdminClient(voldemortConfig,metadataStore.getCluster(),4,2);
  try {
    int rebalanceAsyncId=rebalanceLocalNode(stealInfo);
    adminClient.waitForCompletion(stealInfo.getStealerId(),rebalanceAsyncId,voldemortConfig.getAdminSocketTimeout(),TimeUnit.SECONDS);
  }
  finally {
    adminClient.stop();
  }
}
