{
  if (!indexFile.exists() && !dataFile.exists() && 0 == currentChunkId) {
    throw new VoldemortException("Could not find any data for " + currentPair.getSecond().toString() + "_"+ currentPair.getFirst().toString()+ "_"+ currentChunkId);
  }
  if (indexFile.exists() ^ dataFile.exists()) {
    throw new VoldemortException("One of the following does not exist: " + indexFile.toString() + " and "+ dataFile.toString()+ ".");
  }
}
