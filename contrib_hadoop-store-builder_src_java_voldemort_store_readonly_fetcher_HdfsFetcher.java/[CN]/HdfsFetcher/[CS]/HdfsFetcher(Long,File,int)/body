{
  if (tempDir == null)   this.tempDir=new File(DEFAULT_TEMP_DIR);
 else   this.tempDir=Utils.notNull(new File(tempDir,"hdfs-fetcher"));
  this.maxBytesPerSecond=maxBytesPerSecond;
  if (this.maxBytesPerSecond != null)   this.throttler=new EventThrottler(this.maxBytesPerSecond);
  this.bufferSize=bufferSize;
  this.status=null;
  Utils.mkdirs(this.tempDir);
}
