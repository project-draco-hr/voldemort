  assertEquals(output.size(),2);
  assertEquals(output.get(0),new Integer(3));
  assertEquals(output.get(1),new Integer(7));
  System.out.println("3 : " + output);
  output=RebalanceClusterUtils.removeItemsToSplitListEvenly(input,4);
