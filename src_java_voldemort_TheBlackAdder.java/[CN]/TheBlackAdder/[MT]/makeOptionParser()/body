{
  OptionParser parser=new OptionParser();
  parser.accepts("help","print help information");
  parser.accepts("cluster","cluster name").withRequiredArg().describedAs("cluster").ofType(String.class);
  parser.accepts("zone","zone name or id").withRequiredArg().describedAs("zone").ofType(String.class);
  parser.accepts("testmode","local test mode");
  return parser;
}
