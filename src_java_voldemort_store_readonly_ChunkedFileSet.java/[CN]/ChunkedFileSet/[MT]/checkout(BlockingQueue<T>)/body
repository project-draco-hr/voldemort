{
  try {
    T item=pool.poll(bufferWaitTimeoutMs,TimeUnit.MILLISECONDS);
    if (item == null)     throw new VoldemortException("Timeout after waiting for " + bufferWaitTimeoutMs + " ms to acquire file descriptor");
 else     return item;
  }
 catch (  InterruptedException e) {
    throw new PersistenceFailureException("Interrupted while waiting for file descriptor.",e);
  }
}
